{
    "name": "contactjavas/modern-wpcs-ruleset",
    "type": "phpcodesniffer-standard",
    "keywords": [ "phpcs", "static analysis" ],
    "description": "A PHPCS meta-ruleset for modern WordPress development",
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/contactjavas/modern-wpcs-standard"
        }
    ],
    "require": {
        "php": ">=8.1",
        "contactjavas/modern-wpcs-standard": "dev-master",
        "sirbrillig/phpcs-import-detection": "^1.3.3",
        "sirbrillig/phpcs-variable-analysis": "^2.11.18",
        "wp-coding-standards/wpcs": "^3.1"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "squizlabs/php_codesniffer": "^3.9.1"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
